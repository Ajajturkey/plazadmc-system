                                        <td class="text-center">@((item.Total * item.Pax).Value.ToString(true))  </td>
                                        <td class="text-center">@((item.Cost * item.Pax).Value.ToString(true))</td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                   
                </div>
            </div>
            <hr class="hidden-print" />
