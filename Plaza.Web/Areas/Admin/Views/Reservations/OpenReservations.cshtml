                                    <td>
                                        <b>
                                            @item.Pax Pax @if (!string.IsNullOrEmpty(item.name))
                                            {<text>[@item.name]</text>} [@item.date.ToShortDateString()] - [@item.date.ToShortDateString()]
                                        </b>
                                    </td>
                                    <td width="100">
                                        <b>@item.Total.ToString(true)</b>
