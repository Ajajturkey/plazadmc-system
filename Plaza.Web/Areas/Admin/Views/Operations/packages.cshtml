    <script type="text/javascript">

        $('#sandbox-container .input-daterange').datepicker({
            format: "dd.mm.yyyy",
            daysOfWeekHighlighted: "0,6"
        });

        function SetGuide(id, name) {
            $("#guide").val(name);
            $("#Id").val(id);
            $('#guideModel').modal({
                backdrop: 'static',
                keyboard: false
            })

        }; $(document).ready(function () {
            $('#datatabel').DataTable({
                responsive: {
                    details: {
                        type: 'column',
                        target: 'tr'
                    }
                },
                columnDefs: [{
                    className: 'control',
                    orderable: false,
                    targets: 0
                }],
                order: [1, 'asc'],
                dom: 'Bfrtip',
                buttons: [
                   'print',  'excel', 'pdf'
                ]
            });
        });

    </script>
