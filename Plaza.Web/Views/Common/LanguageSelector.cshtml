@model Line.Models.LanguageSelectorModel
@using Line.Helpers;

@if (Model.AvailableLanguages.Count > 1)
{
    <div class="language-selector">
        @{
            WebHelper wh = new WebHelper(Context);

            var languages = Model.AvailableLanguages.Where(d => d.Published).Select(lang => new SelectListItem
            {
                Text = lang.Name,
                Value = wh.ModifyQueryString(Url.Action("SetLanguage", new { langid = lang.Id }), "returnurl=" + HttpUtility.UrlEncode(HttpContext.Current.Request.RawUrl), null),
                Selected = lang.Id.Equals(Model.CurrentLanguageId)
            });
            @*<nav class="top__menu">
                    <ul class="top-navigation js-dropdown">
                        @foreach (var item in languages)
                        {
                            <li><a class="@if(item.Selected){<text>selected</text>}" href="@item.Value">@item.Text</a></li>
                        }
                    </ul>
                </nav>*@


            @Html.DropDownList("customerlanguage", languages, new { onchange = "location.href =this.value;" })

        }
    </div>
}
