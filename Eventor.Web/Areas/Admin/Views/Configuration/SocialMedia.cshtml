
@{
    ViewBag.Title = "SocialMedia";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>
            @T("SocialMedia.header")
        </h2>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">

           
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-sm-12">
                                @using (Html.BeginForm("SocialMedia", "Configuration", FormMethod.Post))
    {
                            <div class="form-group">
                                <label>@T("facebook.title")</label>
                                @Html.TextBox("facebook", T("facebook"), new { @class = "form-control", @placeholder = @T("facebook.title"), @required = "required" })
                            </div>
                            <div class="form-group">
                                <label>@T("Twitter.title")</label>
                                @Html.TextBox("Twitter", T("Twitter"), new { @class = "form-control", @placeholder = @T("Twitter.title"), @required = "required" })
                            </div>
                            <div class="form-group">
                                <label>@T("instagram.title")</label>
                                @Html.TextBox("instagram", T("instagram"), new { @class = "form-control", @placeholder = @T("instagram.title"), @required = "required" })
                            </div>
                            <div class="form-group">
                                <label>@T("youtube.title")</label>
                                @Html.TextBox("youtube", T("youtube"), new { @class = "form-control", @placeholder = @T("youtube.title"), @required = "required" })
                            </div>
                            <div>
                                <input type="submit" class="btn btn-success" value="@T("button.update")" />
                            </div>
}
                            </div>
                        </div>
                    </div>

       
            
            
        </div>
    </div>



</div>