
@{
    ViewBag.Title = T("ContactUs").ToString();
}


<!-- MAIN TITLE -->
<div class="main-title">
    <div class="container">
        <h1 class="main-title__primary">@T("ContactUs")</h1>
        <h3 class="main-title__secondary">@T("contact.subtitle")</h3>
    </div>
</div><!-- /.main-title -->
<!-- BREADCRUMBS -->
<div class="breadcrumbs margin-bottom-0">
    <div class="container">
        <span>
            <a class="home" href="/" title="Go to Homepage." rel="v:url">@T("home")</a>
        </span>
        <span>
            <span>@T("ContactUs")</span>
        </span>
    </div>
</div><!-- /.breadcrumbs -->
<!-- MAP -->
